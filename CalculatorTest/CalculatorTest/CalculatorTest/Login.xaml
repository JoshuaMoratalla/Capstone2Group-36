<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorTest.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login Function" 
                   FontSize="Large"/>
            <Label Text="Username"/>
            <Entry x:Name="UserNameInput" />
            <Label Text="Password"/>
            <Entry x:Name="PasswordInput" />
            <Button Text="Login"
                    Clicked="LoginButton"/>
            
            <Button Text="Return to Main"
                    Clicked="ReturnToMain"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>