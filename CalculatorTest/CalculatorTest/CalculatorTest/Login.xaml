<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorTest.Login">
    <ContentPage.Content>
        <StackLayout Margin="10,30,10,10">
            <Label Text="Login" 
                   FontSize="Large"
                   HorizontalOptions="Center"/>
            <Label></Label>
            <Label Text="Password"/>
            <Entry x:Name="PasswordInput" IsPassword="True" IsSpellCheckEnabled="False" Completed="PasswordComplete"/>
            <Button Text="Login"
                    Clicked="LoginButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>