<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CalculatorTest"
             x:Class="CalculatorTest.Calculator">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="Testing" Margin="10">
                
                <Label Text="Calculate Plasma Dilution" 
                       VerticalOptions="Center" 
                       HorizontalOptions="Center"
                       FontSize="Large"
                       FontAttributes="Bold"
                       TextColor="Black"/>

                <Label></Label>
                
                <Label Text="Donor Weight:" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
                <Entry x:Name="DonorWeight"
                   Placeholder="In KG">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>

                <Label></Label>

                <Label Text="Blood Transfused in last the 48 hours" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
                <Label Text="Whole Blood:" FontAttributes="Italic"/>
                <Entry x:Name="WholeBlood"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Packed Cells:" FontAttributes="Italic"/>
                <Entry x:Name="PackedCells"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Other Blood Products:" FontAttributes="Italic"/>
                <Entry x:Name="OtherBloodProducts"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>

                <Label></Label>

                <Label Text="Colloids Transfused in last the 48 hours" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
                <Label Text="FFP / Plasma:" FontAttributes="Italic"/>
                <Entry x:Name="FPPPlasma"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Platelets:" FontAttributes="Italic"/>
                <Entry x:Name="Platelets"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Cryoprecipitate:" FontAttributes="Italic"/>
                <Entry x:Name="Cryoprecipitate"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Albumin 4%:" FontAttributes="Italic"/>
                <Entry x:Name="Albumin4"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Albumin 5%:" FontAttributes="Italic"/>
                <Entry x:Name="Albumin5"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Albumin 20%:" FontAttributes="Italic"/>
                <Entry x:Name="Albumin20"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Dextran:" FontAttributes="Italic"/>
                <Entry x:Name="Dextran"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Other Colloids:" FontAttributes="Italic"/>
                <Entry x:Name="OtherColloids"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>

                <Label></Label>

                <Label Text="Crystalloids Transfused in the last hour" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
                <Label Text="0.9% NaCl:" FontAttributes="Italic"/>
                <Entry x:Name="NaCl"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="0.45 NS:" FontAttributes="Italic"/>
                <Entry x:Name="NS"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Hartmann's Solution:" FontAttributes="Italic"/>
                <Entry x:Name="HartmannsSolution"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="4% Dextrose and 1/5:" FontAttributes="Italic"/>
                <Entry x:Name="Dextrose"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>
                
                <Label Text="Other Crystaloids:" FontAttributes="Italic"/>
                <Entry x:Name="OtherCrystalloids"
                   Placeholder="In mls">
                    <Entry.Behaviors>
                        <local:EntryValidateBehaviour/>
                    </Entry.Behaviors>
                </Entry>

                <Label x:Name="Output" 
                   Text="" TextColor="Black"/>

                <!--Buttons-->
                <Button x:FieldModifier="CalculateButton" 
                    Text="Calculate" 
                    Clicked="Button_Clicked"/>
                <Button
                    Text="Return to Main"
                    Clicked="ReturnToMain"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>