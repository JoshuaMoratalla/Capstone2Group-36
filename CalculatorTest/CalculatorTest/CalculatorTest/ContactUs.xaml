<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorTest.ContactUs">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="Contact Us" 
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontSize="Large"/>
            <Label Text="For any questions about the app please email us at:" 
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
            <Label Text="info@ebaanz.org" 
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
            <Button Text="Email Now"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Clicked="OpenURL"/>
            <Button Text="Return To Main"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Clicked="ReturnToMain"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>