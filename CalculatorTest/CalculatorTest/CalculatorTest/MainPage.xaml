<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CalculatorTest"
             x:Class="CalculatorTest.MainPage">

    <StackLayout>
        <Label Text="Calculate Plasma Dilution" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />
        <Label x:Name="Output" Text="Insert Values" BackgroundColor="Aqua"/>

       
        <Entry x:Name="WeightInput" Placeholder="Donor Weight" />
        <Entry x:Name="BloodInput" Placeholder="Blood Trans. in 48 hours" />
        <Entry x:Name="ColloidInput" Placeholder="Colloids Trans. in 48 hours" />
        <Entry x:Name="CrystalInput" Placeholder="Crystalloids Trans. in last hour" />
        <Button x:FieldModifier="CalculateButton" Text="Calculate" Clicked="Button_Clicked" />
    </StackLayout>
	

</ContentPage>